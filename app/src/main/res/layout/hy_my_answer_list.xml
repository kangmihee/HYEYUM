<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="#30000000"
        android:layout_marginTop="10dp">

        <TextView
            android:text=""
            android:id="@+id/txt_mylist_question"
            android:textSize="15dp"
            android:lineSpacingExtra="5dip"
            android:textColor="#dddddd"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_mylist"
        android:background="#30000000"
        android:layout_width="match_parent"
        android:layout_height="27dp">

        <TextView
            android:id="@+id/relative_date"
            android:textSize="15dp"
            android:textColor="#dddddd"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/img_mylist_lock"
            android:layout_alignParentRight="true"
            android:paddingRight="80dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/img_mylist_location"
            android:layout_alignParentRight="true"
            android:paddingRight="50dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/img_mylist_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:paddingRight="20dp"
            android:src="@drawable/heart_full" />

        <TextView
            android:id="@+id/txt_mylist_count"
            android:textColor="#dddddd"
            android:text="5"
            android:textSize="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>