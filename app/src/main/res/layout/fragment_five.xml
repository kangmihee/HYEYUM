<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/mainSetting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#20000000"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/infoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="내 정보"
                android:textColor="#dddddd"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical|left">

            <TextView
                android:id="@+id/info_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:text="이메일"
                android:textColor="#dddddd"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:gravity="center_vertical|center">

                <TextView
                    android:id="@+id/user_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:text=""
                    android:textColor="#dddddd"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical|right">

                <ImageView
                    android:id="@+id/btn_logout"
                    android:layout_width="50dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/logout"
                    android:clickable="true"
                    android:scaleType="fitCenter" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/alarmLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:id="@+id/alarm"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="알림"
                android:textColor="#dddddd"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical|left">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:text="질문 알림"
                android:textColor="#dddddd"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical|right"
                android:weightSum="1">

                <Switch
                    android:id="@+id/question_switch"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="40dp"
                    android:switchMinWidth="60dp"
                    android:text=""
                    android:textOff="OFF"
                    android:textOn="ON" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical|left">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:text="과거답변 알림"
                android:textColor="#dddddd"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical|right">

                <Switch
                    android:id="@+id/past_switch"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="40dp"
                    android:switchMinWidth="60dp"
                    android:text=""
                    android:textOff="OFF"
                    android:textOn="ON" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/lockLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:id="@+id/lock"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="잠금"
                android:textColor="#dddddd"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical|left">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:text="잠금"
                android:textColor="#dddddd"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical|right">

                <Switch
                    android:id="@+id/lock_lock"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="40dp"
                    android:checked="false"
                    android:switchMinWidth="60dp"
                    android:text=""
                    android:textOff="OFF"
                    android:textOn="ON" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical|left">

            <TextView
                android:id="@+id/txt_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:clickable="true"
                android:text="변경하기"
                android:textColor="#dddddd"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:gravity="center_vertical|center">

            <ImageView
                android:id="@+id/app_use"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:background="@drawable/appuse"
                android:clickable="true"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="50dp"
                android:text="|"
                android:textColor="#dddddd"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/app_info"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/appinfo"
                android:clickable="true"
                android:scaleType="fitCenter" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>