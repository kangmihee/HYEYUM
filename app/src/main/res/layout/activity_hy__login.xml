<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loginlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <ImageView
        android:id="@+id/loginlogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/hylogo" />

    <ImageView
        android:id="@+id/loginmungu"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/loginlogo"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/loginmungu" />

    <EditText
        android:id="@+id/edit_loginemail"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_below="@id/loginmungu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:background="@drawable/edittext_bg"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="#dddddd"
        android:textColorHint="#70000000"
        android:textCursorDrawable="@null" />

    <EditText
        android:id="@+id/edit_loginpwd"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/edit_loginemail"
        android:layout_alignStart="@+id/edit_loginemail"
        android:layout_below="@id/edit_loginemail"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittext_bg"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="#dddddd"
        android:textColorHint="#70000000"
        android:textCursorDrawable="@null" />

    <Button
        android:id="@+id/btn_loginok"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/edit_loginpwd"
        android:layout_alignStart="@+id/edit_loginpwd"
        android:layout_below="@id/edit_loginpwd"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:text="로그인"
        android:textColor="#70000000"
        android:textSize="15sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/btn_joingo"
        android:layout_width="55dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/btn_loginok"
        android:layout_alignStart="@+id/btn_loginok"
        android:layout_below="@id/btn_loginok"
        android:layout_marginLeft="53dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="30dp"
        android:background="#00000000"
        android:scaleType="fitCenter"
        android:src="@drawable/joingo" />

    <ImageButton
        android:id="@+id/btn_pwdfind"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_alignEnd="@+id/btn_loginok"
        android:layout_alignRight="@+id/btn_loginok"
        android:layout_below="@id/btn_loginok"
        android:layout_marginRight="33dp"
        android:layout_marginTop="30dp"
        android:background="#00000000"
        android:scaleType="fitCenter"
        android:src="@drawable/pwdfound" />
</RelativeLayout>