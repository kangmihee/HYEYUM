<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pwdfoundlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <ImageView
        android:id="@+id/pwdlogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/hylogo" />

    <ImageView
        android:id="@+id/pwdfound"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/pwdlogo"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/pwfoundmungu" />

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_below="@id/pwdfound"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:background="@drawable/edittext_bg"
        android:hint="이메일을 입력해주세요"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="#dddddd"
        android:textColorHint="#70000000"
        android:textCursorDrawable="@null" />

    <TextView
        android:id="@+id/txt_pwd"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/edit_email"
        android:layout_alignStart="@+id/edit_email"
        android:layout_below="@+id/edit_email"
        android:layout_marginTop="15dp"
        android:text="비밀번호를 알려주는 곳"
        android:textColor="#dddddd"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btn_pwd"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/txt_pwd"
        android:layout_alignStart="@+id/txt_pwd"
        android:layout_below="@id/txt_pwd"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:text="비밀번호 찾기"
        android:textColor="#70000000"
        android:textSize="15sp"
        android:textStyle="bold" />
</RelativeLayout>