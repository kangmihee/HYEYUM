<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlayout_3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <TextView
        android:id="@+id/up_txt_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/btn_save"
        android:layout_toStartOf="@+id/btn_save"
        android:gravity="center_horizontal"
        android:text=""
        android:textColor="#dddddd"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/up_txt_writetitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/up_txt_date"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:lineSpacingExtra="4dip"
        android:text=""
        android:textColor="#dddddd"
        android:textSize="17dp" />

    <EditText
        android:id="@+id/up_edit_answer1"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/up_txt_writetitle"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:backgroundTint="#333333"
        android:gravity="center_horizontal"
        android:hint="내용을 입력해주세요."
        android:lineSpacingExtra="3dip"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:privateImeOptions="defaultInputmode=korean"
        android:textColor="#dddddd"
        android:textColorHint="#c3c3c3"
        android:textSize="16dp" />

    <ImageButton
        android:id="@+id/btn_update"
        android:layout_width="64px"
        android:layout_height="64px"
        android:layout_alignParentRight="true"
        android:background="@drawable/save_white" />

    <ImageButton
        android:id="@+id/up_btn_back"
        android:layout_width="64px"
        android:layout_height="64px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/back_white" />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/up_edit_answer1"
        android:layout_alignStart="@+id/up_edit_answer1"
        android:layout_below="@+id/up_edit_answer1"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/linear_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:weightSum="1"/>

    <ImageButton
        android:id="@+id/up_location_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/up_etLocation"
        android:layout_marginEnd="58dp"
        android:layout_marginRight="58dp"
        android:layout_marginTop="25dp"
        android:layout_toLeftOf="@+id/linear_icon"
        android:layout_toStartOf="@+id/linear_icon"
        android:background="#00000000"
        android:gravity="center"
        android:maxLines="1"
        android:scaleType="fitCenter"
        android:src="@drawable/location_grey" />

    <TextView
        android:id="@+id/up_etLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_icon"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:hint=""
        android:maxLines="1"
        android:textColor="#ffffff" />


    <ImageButton
        android:id="@+id/up_lock_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/up_location_btn"
        android:layout_marginLeft="55dp"
        android:layout_marginStart="55dp"
        android:layout_toEndOf="@+id/linear_icon"
        android:layout_toRightOf="@+id/linear_icon"
        android:background="#00000000"
        android:clickable="true"
        android:gravity="center"
        android:maxLines="1"
        android:scaleType="fitCenter"
        android:src="@drawable/lock_unchecked_cut"
        android:tag="open" />

</RelativeLayout>